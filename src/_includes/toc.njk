---
layout: layout.njk
---
{% set relpath = "src/content/img/" %}

<body>
  {% include "nav.njk" %}

  <!-- Table of Contents -->
  <section class="table-of display borders">
    <ul>
    {% if page.url == "/" %}
      <!-- WARNING: EDITS HERE MUST BE MADE FOR HOME PAGE AND PROJECT PAGES -->
      {% for proj in projects %}
        <li class="project">
          <a href="/projects/{{ proj.title | slugify }}">{{ proj.title }}</a>
          <div class="thumbnail">
            {% image relpath+proj.cover+".jpg", proj.alt %}
          </div>
        </li>
      {% endfor %}

    {% else %}
      {% for hoja in pagination.pages %}
        <li class="project">
          <a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{hoja.title}}</a>
          <div class="thumbnail">
            {% image relpath+hoja.cover+".jpg", hoja.alt %}
          </div>
        </li>
      {% endfor %}
    {% endif %}
    </ul>
  </section>

  {{ content | safe }}


</body>